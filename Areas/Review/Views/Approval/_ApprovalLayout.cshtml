@using IMRepo.Models.Domain;
@{
    Layout = "_Layout";
    ViewData["Title"] = "Aprobaciones pendientes";
}

@if (this.User.IsInRole(ProjectGlobals.RoleDireccion) || this.User.IsInRole(ProjectGlobals.RoleOperacion) || this.User.IsInRole(ProjectGlobals.RoleAdmin))
{
    <form class="mb-5">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link @ViewBag.navPayment" asp-area="Review" asp-controller="Approval" asp-action="Payments">@ModelsTexts.Payment.titlePlural</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @ViewBag.navAddition" asp-area="Review" asp-controller="Approval" asp-action="Additions">@ModelsTexts.Addition.titlePlural</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @ViewBag.navExtension" asp-area="Review" asp-controller="Approval" asp-action="Extensions">@ModelsTexts.Extension.titlePlural</a>
            </li>
        </ul>
    </form>
}

@RenderBody()


