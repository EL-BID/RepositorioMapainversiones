@page
@model LoginModel

@{
    ViewBag.LoginIn = true;
    ViewBag.NoContainer = true;
    ViewBag.NoTitle = true;
}

<!--components -->
<link href="~/assets/css/components.css" rel="stylesheet">

<div class="d-flex flex-column min-vh-100 bg-login">

    <!--FORMULARIO INGRESO-->
    <section class="section login">
        <div class="container">

            <div class="row justify-content-center align-content-center">
                <!--- USUARIO REGRISTRADO --->
                <!-- remover la clase d-none para visualizar el primer formulario-->
                <div class="col-lg-4">
                    <div class="logo text-center mb-5">
                        <img class="lazy img-fluid" src="~/assets/img/remi-es.svg" alt="Logo Repositorio MapaInversiones">
                    </div>

                    <div class="card wrap-form-login p-3">
                        <h2>Ingreso</h2>
                        <form id="account" method="post" novalidate="novalidate">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Email" class="form-label"></label>
                                <span asp-validation-for="Input.Email" class="text-danger field-validation-valid"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                <label asp-for="Input.Password" class="form-label">Contraseña</label>
                                <span asp-validation-for="Input.Password" class="text-danger field-validation-valid"></span>
                            </div>
                            <div class="d-flex">
                                <button id="login-submit" type="submit" class="btn btn-primary btn-large w-100 justify-content-center">Iniciar Sesión</button>
                            </div>
                            <div class="mt-3">
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarme</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </section>


    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/lozad.min.js"></script>
    <script src="~/assets/js/device.js"></script>
    <script src="~/assets/js/jquery-ui.min.js"></script>
    <script src="~/assets/js/custom.js"></script>

    <script src="~/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/assets/libs/lozad/lozad.min.js"></script>
    <script src="~/assets/libs/device/device.js"></script>
    <script src="~/assets/libs/ScrollToFixed/jquery-scrolltofixed-min.js"></script>
    <script src="~/assets/libs/spincrement/jquery.spincrement.min.js"></script>
    <script src="~/assets/libs/jquery-popup-overlay-gh-pages/jquery.popupoverlay.js"></script>
    <script src="~/assets/libs/jquery-validation-1.19.3/jquery.validate.min.js"></script>
    <script src="~/assets/libs/autosize-master/autosize.min.js"></script>
    <script src="~/assets/libs/flickity/flickity.pkgd.min.js"></script>
    <script src="~/assets/libs/flickity/flickity-imagesloaded.js"></script>
    <script src="~/assets/libs/flickity/bg-lazyload.js"></script>
    <script src="~/assets/libs/flickity/flickity-fade.js"></script>
    <script src="~/assets/libs/isotope/isotope.pkgd.min.js"></script>
    <script src="~/assets/libs/lightGallery/js/picturefill.min.js"></script>
    <script src="~/assets/libs/lightGallery/js/lightgallery-all.min.js"></script>
    <script src="~/assets/libs/lightGallery/js/jquery.mousewheel.min.js"></script>
    <script src="~/assets/libs/jquery-ui-range/jquery-ui.min.js"></script>
    <script src="~/assets/js/custom.js"></script>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
