@using IMRepo.Models.Domain;
@model Agency
@using IMRepo.Utilities;
@{
    ViewData["ModelTitle"] = ModelsTexts.Agency.title;
    var isEditable = (bool)(ViewData["UpdateAvailable"] ?? false);
}

<form id="FormAgency" asp-action=@ViewData["Action"] class="mt-2" asp-route-returnUrl="@ViewBag.returnUrl" asp-route-bufferedUrl="@ViewBag.bufferedUrl">
    @await Html.PartialAsync("/Views/Shared/JaosLib/_ResultMessages.cshtml",ViewData)
    <!-- CAPTURE AGENCY PROPERTIES -->
    @if ((int)(ViewData["ModelId"] ?? 0) > 0)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
    </div>
    <div class="row">
        <div>
            <div  class="form-control"id="divName">
                <label asp-for="Name" class="control-label" title=@ModelsTexts.Agency.NameDescription></label>
                <input asp-for="Name" type="text" >
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div>
            <div  class="form-control"id="divAcronym">
                <label asp-for="Acronym" class="control-label" title=@ModelsTexts.Agency.AcronymDescription></label>
                <input asp-for="Acronym" type="text" >
                <span asp-validation-for="Acronym" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div>
            <div  class="form-control"id="divOfficialID">
                <label asp-for="OfficialID" class="control-label" title=@ModelsTexts.Agency.OfficialIDDescription></label>
                <input asp-for="OfficialID" type="text" >
                <span asp-validation-for="OfficialID" class="text-danger"></span>
            </div>
        </div>
    </div>
    <!-- capture agency properties -->
    <span data-model="Agency"></span>
    @await Html.PartialAsync("/Views/Shared/JaosLib/_FormFooter.cshtml",ViewData)
</form>
<!-- end of agency form -->
@section Scripts { @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");} }

<script>
    @* Disable capture fields to Display Agency *@
    const x = @((!isEditable).ToString().ToLower());
    document.getElementById('Name').disabled = x;
    document.getElementById('Acronym').disabled = x;
    document.getElementById('OfficialID').disabled = x;
</script>
